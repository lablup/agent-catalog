{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/lablup/agent-catalog/schemas/registry-index.schema.json",
  "title": "RegistryIndex",
  "description": "Master index file for the agent-catalog registry. Lists all available agent profiles with summary metadata.",
  "type": "object",
  "required": ["version", "updatedAt", "profiles"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Optional JSON Schema reference for editor support."
    },
    "version": {
      "type": "integer",
      "description": "Schema version of the index format.",
      "minimum": 1
    },
    "updatedAt": {
      "type": "string",
      "description": "ISO 8601 timestamp of when the index was last updated.",
      "format": "date-time"
    },
    "profiles": {
      "type": "array",
      "description": "Array of profile summary entries.",
      "items": {
        "$ref": "#/$defs/RegistryProfileEntry"
      }
    }
  },
  "$defs": {
    "RegistryProfileEntry": {
      "type": "object",
      "description": "Summary entry for a single agent profile in the registry index.",
      "required": ["path", "name", "category", "version"],
      "additionalProperties": false,
      "properties": {
        "path": {
          "type": "string",
          "description": "Relative path to the profile JSON file (e.g., 'code-assistants/python-expert.json')."
        },
        "name": {
          "type": "string",
          "description": "Display name of the profile.",
          "minLength": 1,
          "maxLength": 200
        },
        "description": {
          "type": "string",
          "description": "Short description of the profile.",
          "maxLength": 2000
        },
        "category": {
          "type": "string",
          "description": "Profile category.",
          "enum": [
            "code_assistant",
            "research_analyst",
            "document_creator",
            "data_analyst",
            "custom_agent",
            "utility"
          ]
        },
        "author": {
          "type": "string",
          "description": "Author of the profile."
        },
        "icon": {
          "type": "string",
          "description": "Emoji or icon identifier."
        },
        "tags": {
          "type": "array",
          "description": "Searchable tags.",
          "maxItems": 20,
          "items": {
            "type": "string",
            "maxLength": 50
          }
        },
        "version": {
          "type": "string",
          "description": "Profile version (semver).",
          "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.]+)?(\\+[a-zA-Z0-9.]+)?$"
        }
      }
    }
  }
}
